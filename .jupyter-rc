jupyter_skip_slides() {
    if [ "$1" == "-i" ]; then
        shift
        path="$1"
        tmp="$(mktemp)"
        jupyter_skip_slides "$@" > "$tmp"
        mv "$tmp" "$path"
    else
        if [ $# -ne 1 ]; then
            echo "Usage: ${FUNCNAME[0]} [-i] <ipynb path>" >&2
            return 1
        fi
        path="$1"; shift
        local dir="$(dirname "${BASH_SOURCE[0]}")"
        jq -f "$dir/ipynb-skip-slides.jq" "$path"
    fi
}
export -f jupyter_skip_slides
