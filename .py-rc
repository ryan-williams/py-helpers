find_python_imports() {
    git grep -e '^from [^\.]*' -e '^import [^\.]*' \
    | sed 's/^[^:]\+://' \
    | awk '{ print $1,$2 }' \
    | awk -F. '{ print $1 }' \
    | awk '{ print $2 }' \
    | sort \
    | uniq
}
