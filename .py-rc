python_executable_copy() {
  if ! which copy &>/dev/null && ! declare -F copy &>/dev/null; then
    echo '`copy` command not found' >&2
    return 1
  fi
  python_executable | head -c -1 | tee >(copy)
}
export -f python_executable_copy
